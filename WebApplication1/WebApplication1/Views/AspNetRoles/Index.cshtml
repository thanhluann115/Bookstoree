@model IEnumerable<WebApplication1.Models.AspNetRole>

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>
<tr>
    <td>
        <a class="button-radius" href="@Url.Action("index" ,"AspNetUsers")"> TÀI KHOẢN KHÁCH HÀNG</a> |
        <a class="button-radius" href="@Url.Action("Index","THONGTINCANHANs")">THÔNG TIN KHÁCH HÀNG </a> |
        <a class="button-radius" href="@Url.Action("index","SANPHAMs")">SẢN PHẨM </a> |
        <a class="button-radius" href="@Url.Action("index","DonHang")">ĐƠN HÀNG </a>|
    </td>
</tr>
<p>

    <a href="@Url.Action("Create")">Create New</a>
</p>
<table class="table">
    <tr>
        <th>Role</th>
        <th>User</th>
        <th></th>
    </tr>

    @foreach (var role in Model)
    {
        <tr>
            <td>
                @role.Name
            </td>
            <td></td>
            <td>
                <a href="@Url.Action("Edit", new { id = role.Id })">Edit</a> |
                <a href="@Url.Action("Delete", new { delete = role.Id })">Delete</a> |
                <a href="@Url.Action("Create","AspNetRoleUser",new { RoleId = role.Id })">Add User</a>
            </td>
        </tr>
        foreach (var user in role.AspNetUsers)
        {
            <tr>
                <td></td>
                <td>@user.UserName</td>
                <td>
                    <a href="@Url.Action("Delete","AspNetRoleUser", new { roleId = role.Id, userId= user.Id})">Delete</a>
                </td>
            </tr>
        }
    }

</table>
