<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Sản Phẩm Mới Nhất</h2>
                    <div class="product-carousel">
                        @foreach (var sANPHAM in Model)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <a href="@Url.Action("Details", new { sANPHAM.MaSP})">
                                        <img src="@Url.Action("Picture","SANPHAMs", new { sANPHAM.MaSP})" width="1950px" height="1300px" alt="Demo picture">
                                    </a>
                                    <div class="product-hover">
                                        <a href="@Url.Action("Index", "ShoppingCart")" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Thêm Vào Giỏ Hàng</a>
                                        <div class="product-hover">
                                            <a href="@Url.Action("Details",new { sANPHAM.MaSP})" class="view-details-link"><i class="fa fa-link"></i> Xem Chi Tiết</a>
                                        </div>
                                    </div>
                                </div>

                                <h2><a href="@Url.Action("Details","SANPHAMs",new { sANPHAM.MaSP})">@sANPHAM.TenSP</a></h2>

                                <div class="product-carousel-price">
                                    <p>@sANPHAM.Gia VNĐ</p>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->

