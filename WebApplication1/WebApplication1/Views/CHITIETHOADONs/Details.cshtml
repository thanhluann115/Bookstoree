@model IEnumerable<WebApplication1.Models.CHITIETHOADON>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HOADON.TenKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SANPHAM.TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SANPHAM.Gia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuongSP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HOADON.TenKH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
    </td>
    <td>
        <span class="amount">@(item.SANPHAM.Gia * item.SoLuongSP)VND  </span>
    </td>

</tr>
}

</table>
